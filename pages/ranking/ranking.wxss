page {
  margin: 0;
  padding: 0;
}

.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}

.title {
  width: 750rpx;
  height: 180rpx;
  border-radius: 0px 0px 25px 25px;
  line-height: 80rpx;
  text-align: center;
}

.all {
  display: flex;
  flex-direction: column;
  align-items: center;
  color:white
}

.apply_a {
  width: 80%;
  height: 410rpx;
  margin-top: 100rpx;
  border: none 5rpx;
  border-color: gray;
}

.apply {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 150rpx;
  vertical-align: middle;
}

.apply_p {
  color: white;
  line-height: 100rpx;
  text-align: center;
  width: 30%;
  font-size: 32rpx;
}

.apply_input_a {
  border: 1px solid #9ab3fa;
  background-color: rgb(89, 118, 198);
  text-align: center;
  width: 100%;
  height: 220rpx;
  line-height: 220rpx;
  font-size: 32rpx;
  margin-top: -150rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-around;
}

.apply_input {
  border: 1px solid #9ab3fa;
