page {
  margin: 0;
  padding: 0;
}

.bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1
}
.main {
  position: absolute;
  width: 100%;
  height: 100%;
}
button {
  background: none;
  border: none;  
}
button:after {
  border: none;
}
button{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  /* border-radius: 20rpx; */
  box-sizing: border-box;
}

.areaTop,.areaBottom {
  padding: 2%;
  width: 100%;
  box-sizing: border-box;
}
.areaBottom {
  margin-top: -4%
}

.area1, .area2, .area3, .area4 {
  position: relative;
  display: inline-block;
  box-sizing: border-box;
}

.area1 {
  width: 64%;
}

.area2 {
  width: 34%;
  margin-left: 2%;
  vertical-align: top;
}

.area3 {
  width: 31%;
}

.area4 {
  width: 67%;
  margin-left: 2%;
  vertical-align: top;
}

.box1, .box2, .box3, .box4 {
  position: relative;
  display: inline-block;
  width: 49%;
  height: 0;
  padding-top: 75%;
  box-sizing: border-box;
}

.box1, .box3 {
  margin-right: 2%;
}

.box3, .box4 {
  margin-top: -1%;
}

.img1, .img2, .img3, .img4, .img5, .img6, .img7, .img8, .img9, .img10 {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.lock1 {
  width: 30%;
  height: 30%;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  position: absolute;
}

.box5, .box6, .box7 {
  position: relative;
  width: 100%;
  height: 0;
  box-sizing: border-box;
}

.box5, .box6 {
  padding-top: 82%;
  margin-bottom: 4%;
}

.box7 {
  padding-top: 115%;
}

.box8, .box9 {
  width: 100%;
  height: 0;
  padding-top: 60%;
  position: relative;
}

.box8 {
  margin-bottom: 4%;
}

.box10 {
  width: 100%;
  height: 0;
  padding-top: 57%;
  position: relative;
}

.pk {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  z-index: 10;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

