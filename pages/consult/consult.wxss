@import "/pages/template/search-input/search-input";
.weui-search-bar{
  position: fixed;
  top: 20rpx;
  width: 100%;
  z-index: 99;
  box-sizing: border-box;
  background: rgba(155, 255, 255, 0);
  border:none;
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.ad {
  width: 100%;
  height: 45%;

}

.adswiper {
  width: 100%;
  height: 100%;
  background-size: cover;
}

.ad-image {
  width: 100%;
  height: 100%;
}

.bts {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
  align-content: space-between;
  align-items: center;
  background-color: #F5F5F5
}

.bt-up {
  width: 95%;
  height: 33%;
  display: flex;
  flex-direction: row;
  align-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  position: absolute;
  margin-top: -20rpx
}

.bt-down {
  width: 100%;
  height: 50%;
  display: flex;
  flex-direction: column;
  align-content: space-between;
  align-items: center;
  margin-top: 350rpx;
}

.bt-up button {
  height: 95%;
  width: 95%;
  padding: 0rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.bt-up button image {
  margin-top: 10rpx;
  width: 130rpx;
  height: 130rpx;
}

.bt-up button text {
  margin-top: 30rpx;
  width: 100%;
  line-height: 300%;
}



 .bt-down image {
  width: 100%;
  
} 


.textType{
  color: #31B5FF;
  font-size: 28rpx;
  font-family : 黑体;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}


.showModule {
  display:flex;
  flex-direction: column;
  /* justify-content:center; */
  align-items:center;
  position:fixed;
  left:10%;
  top:12%;
  height:800rpx;
  width:600rpx;
  opacity:0.99;
  border-radius: 15px;
  background-color: rgb(255, 255, 255);

}

.showModule .module-bottom .title {
  text-align: center;
  font-weight: bold;
}
.showModule .TopImage {
  width: 100%;
  height: 150rpx;
  background-color: #1296db;
  border-radius: 15px;
  opacity: 0.8
}
.showModule .TopImage image{
  display: block;
  margin-left: 240rpx;
  width: 120rpx;
  height: 120rpx;
}
.showModule .module-bottom{
  display: flex;
  flex-direction: column;
}
.showModule .module-bottom .text {
 /* flex 布局 */
 display: flex;
 /* 字体加粗 */
 /* font-weight: bold; */
 font-size: 15px;
 height: 450rpx;
 text-indent: 20px;
 font-family: "微软雅黑";
background-color: rgb(255, 255, 255);

}
.showModule .module-bottom .btn{
  background: rgb(49,181,255);
  color: #fff;
  font-size: 16px;
}
