/* pages/paymentConfirm/paymentConfirm.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 88vh;
  align-items: center;
  background-color: white;
  border-radius: 25rpx;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 34rpx;
  width: 90%;
  margin-top: 10px;
  margin-bottom: 10px;
}

.main {
  width: 100%;
  height: 100%;
  background-color: #5dc2fa;
  padding: 5%;
}

.txt {
  color: #5dc2fa;
}

.type {
  background-color: #5dc2fa;
  border-radius: 15rpx;
  border-style: none;
}

.type1 {
  background-color: white;
  border-radius: 15rpx;
  border: 1rpx solid #5dc2fa;
}

.option {
  padding-top: 32rpx;
  border-top: 10rpx solid #f8f8ff;
  width: 100%;
}

.pay_method {
  font-size: 32rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
  justify-items: center;
  padding: 20rpx 5%;
}

.desc {
  font-size: 26rpx;
  color: #ccc;
}
