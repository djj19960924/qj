
.content-item {
  height: 100vh;
  width: 100%;
  position: relative;
  display: flex;
}

.item-image {
  position: relative;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.titleContainer {
  margin-top: 100rpx;
  position: absolute;
  width: 94%;
  margin: auto 3%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 800rpx;
  border: 1px solid #afa8eb;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  background: #472572;
  
}



.title{
  height: 200rpx;
  font-size: 22px;
  margin-top: 50rpx;
  text-align: center;
  color: #fff;
}

.knowlegePoint {
  font-size: 13px;
  text-indent:10px;
  margin-top: 18rpx;
  letter-spacing: 5rpx;
  color: #BDB9B0;
  padding-left: 5rpx;
}
