/* pages/test/test.wxss */
.can_use{
  font-weight:bold;
  font-size:75%
}
.txt{
  color: #5DC2FA;
  font-size: 90%;
  font-weight: normal
}
.couponDefault{
  display: flex;
  flex-direction: row;
  width:85%;
  margin-left:20px;
  border: solid 1px #4EDEFF; 
  margin-top:5px;
  height:82px;
  border-radius: 5px;
  box-shadow: 0px 5px 2px #cccccc
}

.couponDefault .left{
  width:50%;
  font-size:18px;
  background-color: #ffffff;  
  display: flex;
  justify-content: center; 
  align-items: center;
  color:#4EDEFF; 
}

.couponDefault .right{
  width:50%;
  display: flex; 
  flex-direction: column;
  justify-content: flex-start;
  background: linear-gradient(to right,#5DC2FA, #4EDEFF);
}

.couponDefault .right .type{
  font-size:18px;
  padding-left: 50px;
  padding-top: 25px;
  color: #ffffff;
}

.couponDefault .right .effectiveData{
  display:flex;
  flex-direction: row;
  font-size: 12px;
  color:#ffffff;
  padding-left: 10px;
  padding-top: 5px
 
  
}
.couponSelect{
  display: flex;
  flex-direction: row;
  width:85%;
  margin-left:20px;
  border: solid 1px #aaa;
  border-radius: 5px;
  margin-top:5px;
  height:82px;
 
}

.couponSelect .left{
  width:40%;
  font-size:20px;
  color:white;
  background-color: #CD3333;  
  display: flex;
  justify-content: center; 
  align-items: center;
}

.couponSelect .right{
  width:60%;
  display: flex; 
  flex-direction: column;
  justify-content: flex-start
}

.couponSelect .right .type{
  font-size:18px;
  padding-left: 10px;
  padding-top: 24px;
  color:#cccccc;
}

.couponSelect .right .effectiveData{
  display:flex;
  flex-direction: row;
  font-size: 12px;
  color:#cccccc;
  padding-left: 5px;
  padding-top: 5px;  
  
}
.sub{
  position:absolute;
  display:flex; 
  left: 50%;
  transform:translate(-50%);
  justify-content: center;
  margin: auto;
  bottom: 50rpx;
}