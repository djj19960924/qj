/* pages/search/index.wxss */

.container {
  width: 100%;
  height: 100vh;
  position: relative;
  background-color: f2f2f2;
}

.search-input {
  display: flex;
  flex-direction: row;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 0 10rpx 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 9;
}

.select_box {
  background: #fff;
  width: 15%;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.select_text {
  font-size: 30rpx;
  flex: 1;
}

.select_img {
  width: 20rpx;
  height: 15rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.search-list {
  width: 100%;
  height: 90vh;
  position: absolute;
  top: 120rpx;
}

.search-value {
  flex: 1;
  font-size: 30rpx;
  padding-left: 30rpx;
}

.search {
  margin-right: 20rpx;
  font-size: 35rpx;
  color: #cc0;
}

.container .wrapper {
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 1rpx #e9e9e9 solid;
}

.content {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 15rpx 0;
}

.content .poster {
  width: 20%;
  height: 100rpx;
}

.content image {
  width: 100%;
  height: 100%;
}

.total {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 80%;
  height: 90rpx;
}

.total .title {
  font-size: 30rpx;
  color: #4a4a4a;
  font-weight: 600;
  width: 100%;
  overflow: hidden;
  height: 35rpx;
  line-height: 35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.desc {
  font-size: 28rpx;
  color:#ccc;
  line-height: 30px;
}

.title {
  font-weight: bold;
}

.count {
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: #999;
}

.style {
  position: absolute;
  right: 40px;
}

.pinglun {
  position: absolute;
  right: 10px;
}
